{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "./*.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/*.ts",
    "src/*.svelte",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/*.d.ts"
  ]
}
